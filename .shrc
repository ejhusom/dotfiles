# git aliases{{{
alias g='git status'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias gp='git push'
alias gpl='git pull'
alias gl='git log --graph --oneline' # show git log as graph
alias gall="find . -maxdepth 1 -mindepth 1 -type d -exec sh -c '(echo {} && \
    cd {} && git status -s && echo)' \;" # check git status of all subfolders
#}}}

